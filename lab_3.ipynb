    "def check_kollats(n):\n",
    "    output = str(n)\n",
    "    steps = 0\n",
    "    while (n != 1):\n",
    "        n = n / 2 if n % 2 == 0 else 3 * n + 1\n",
    "        output += ' => ' + str(n)\n",
    "        steps += 1\n",
    "    return steps, output\n",
    "    \n",
    "\n",
    "steps, result = check_kollats(27)\n",
    "print steps, 'steps'\n",
    "print result        "
   ]
